<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tasksImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="7dp"/>

    <TextView
        android:id="@+id/tasksTextView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tasksImageView"
        android:layout_toRightOf="@+id/tasksImageView"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/priceTaskTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tasksImageView"
        android:layout_toEndOf="@+id/tasksImageView"
        android:text="TextView"
        android:layout_toRightOf="@+id/tasksImageView" />

    <TextView
        android:id="@+id/timeTaskTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:layout_alignParentRight="true"

        android:layout_marginTop="10dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="10dp"
        />
</RelativeLayout>